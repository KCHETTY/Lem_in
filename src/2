#include "lem_in.h"


void	malloc_rooms(t_glob *g)
{
	int	i;

	i = 0;
	while (i < g->num_rooms)
	{
		g->rooms[i] = (t_data *)malloc(sizeof(t_data));
		i++;
	}
}

void	get_data(t_glob *g)
{
	malloc_rooms(g);

}
